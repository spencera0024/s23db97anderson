extends layout

block content
  h1= title 
  - let items = results
  div(class="container-fluid m-1")
    div(class="row")
        each item in items
          - let destination = `dispatch(\"/gems/update/?id=${item._id}\")`
          div(class="col-sm-2") #{item.name} #{item.color} #{item.hardness}
          button.btn( class="btn-primary ml-1", onclick=destination) Update

  script. 
    function dispatch(path) {
      window.location.href=path;
    }

