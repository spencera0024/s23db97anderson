extends layout 

block content
    h1=title

    form(id='GemForm', action='/resource/gems', method="POST")
        div.form-group
            label.gemAttr(for='gem-type') Gem type 
            input#size(type='text', name='name')
        div.form-group
            label.gemAttr(for='color') Gem color
            input#size(type='text', name='color')
        div.form-group
            label.gemAttr(for='hardness') Gem hardness
            input#size(type='number', name='hardness')
        input(type='submit')

    script.
         document.forms['GemForm'].addEventListener('submit', (event) => {
            event.preventDefault();
            fetch(event.target.action, {
                method: 'POST',
                body: new URLSearchParams(new FormData(event.target))
            }).then((resp) => {
                return resp.json();
            }).then((body) => {
                alert("Save succeded")
            }).catch((error) => {
                alert("Save failed " + error )
            });
        });






